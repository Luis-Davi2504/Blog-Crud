{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
    
{{/each}}

<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button> <br></a>
<br>

{{#each postagens}}
{{postagens}}
  <div class="card mt-4">
      <div class="card-body">
        <h5 class="card-title">{{titulo}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{desc}}</h6>
        <div class="callout mt-3"><p class="card-text">{{content}}</p></div>
        <br>
        <p class="text-muted">{{category.slug}}</p>
        <small>Data: {{date}}</small>
        
      </div>
  </div>
{{else}}
    <h4 class="mt-3">Nenhuma Postagem registrada.</h4>
{{/each}}    
