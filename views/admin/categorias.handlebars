{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
    
{{/each}}

<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button> <br></a>
<br>

{{#each categorias}}
    
    <div class="card">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            <br>
            <div class="input-group mt-2">
                <a href="/admin/categorias/edit/{{_id}}">
                <button type="button" class="btn btn-primary">Editar Categoria</button>
                </a>
            
                <form action="/admin/categorias/delete" method="POST">
                    <input type="hidden" name="_id" value="{{_id}}" >
                    
                    <button type="submit" class="btn btn-danger mx-4">Deletar Categoria</button>
                </form>
            </div>

        </div>
    </div> 
    <br>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada.</h4>
{{/each}}    
